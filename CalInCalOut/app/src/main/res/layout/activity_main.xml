<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">





    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/nutrition_nav"
        app:menu="@menu/nav_items"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="56dp">

    </android.support.design.widget.BottomNavigationView>

    <FrameLayout
        android:id="@+id/nutrition_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:src="@drawable/nutritionimage2" />

                <Button
                    android:id="@+id/my_meal_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Meal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/breakfast"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Breakfast"
                        android:textSize="8dp" />

                    <Button
                        android:id="@+id/lunch"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Lunch"
                        android:textSize="8dp" />

                    <Button
                        android:id="@+id/dinner"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Dinner"
                        android:textSize="8dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/morning_snack"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Morning Snack"
                        android:textSize="8dp" />

                    <Button
                        android:id="@+id/afternoon_snack"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Afternoon Snack"
                        android:textSize="8dp" />

                    <Button
                        android:id="@+id/evening_snack"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:text="Evening Snack"
                        android:textSize="8dp" />


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </FrameLayout>

</RelativeLayout>